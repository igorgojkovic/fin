DO CASE GRUPA
CASE GRUPA='1'.or.grupa='4'
   IF DUG<=7562
      REPLACE PROVIZIJA WITH 60
   ENDIF
   IF DUG>7562
      MMP=ROUND(0.008*DUG,0)
      REPLACE PROVIZIJA WITH MMP
   ENDIF
CASE GRUPA='2'
   IF DUG<=4500
      MMP=45
   ENDIF
   IF DUG>4500.AND.DUG<=500000
      MMP=ROUND(0.01*DUG,2)
   ENDIF
   IF DUG>500000
      MMP=ROUND(5000,0)
   ENDIF
   REPLACE PROVIZIJA WITH ROUND(MMP,2)
   REPLACE PROCPROV WITH 0
CASE GRUPA='3'
   MPROVIZIJA=ROUND(DUG*1/100,2)
   MPROVINT=INT(DUG*1/100)
   MPROVRAZ=MPROVIZIJA-MPROVINT
   REPLACE PROVIZIJA WITH MPROVIZIJA
   REPLACE PROCPROV WITH 1
ENDCASE


