SET ORDER TO 
GO BOTTOM
IF RECCOUNT()>0
   MVPDV=VPDV
   MDATPDV=DATPDV
   MDATPRI=DATPRI
   MDATDOK=DATDOK
   MVALUTA=VALUTA
   MBRNAL=BRNAL
   MDOK=DOK
ELSE
   MVPDV='UN0'
   MDATPDV=CTOD('')
   MDATPRI=CTOD('')
   MDATDOK=CTOD('')
   MVALUTA=CTOD('')
   MBRNAL=SPACE(6)
   MDOK=SPACE(3)      
ENDIF   
