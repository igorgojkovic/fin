COPY TO &KKOCKA FOR DATDOK=MDATDOK
*---------UNOSIMO TEKUCE STANJE---------
SELECT KOMKIR
APPEND FROM &KKOCKA
GO TOP
DO WHILE.NOT.EOF()
   MBRKAL=BRKAL
   MIZNOS=0
   MIZNOSU=0
   MKOL=0
   MVRSTAROBE=SPACE(25)
   MJED=SPACE(10)
   SELECT KAL
   SEEK MBRKAL
   IF FOUND()
      MVRSTAROBE=ROB.VRSTAROBE
      MJRED=ROB.JED
      DO WHILE.NOT.EOF()
         IF BRKAL<>MBRKAL
            EXIT
         ENDIF      
         IF KALG.DEVIZNA<>' '
            IF KALG.PRODAJA=' '.OR.KALG.PRODAJA='V'
               MIZNOSU=MIZNOSU+IZNOS
            ENDIF
         ELSE
            IF KALG.PRODAJA=' '.OR.KALG.PRODAJA='V'
               MIZNOS=MIZNOS+IZNOS   
            ENDIF
         ENDIF   
         IF KALG.PRODAJA=' '.OR.KALG.PRODAJA='V'
            MKOL=MKOL+KOL
         ENDIF
         SKIP
      ENDDO   
   ENDIF
   SELECT KOMKIR
   REPLACE IZNOS WITH MIZNOS
   REPLACE IZNOSU WITH MIZNOSU
   REPLACE KOL WITH MKOL
   REPLACE VRSTAROBE WITH MVRSTAROBE
   REPLACE JED WITH MJED
   REPLACE BRKAL WITH MBRKAL
   SKIP
ENDDO   

