      DO WHILE.NOT.EOF()
         IF SIFRA<>MSIFRA
            EXIT
         ENDIF
         IF DATDOK<MDATDOK
            IF PRODAJA=' '.OR.PRODAJA='V'
            MBRKAL=BRKAL
            SELECT KAL
            SEEK MBRKAL
            IF FOUND()
               DO WHILE.NOT.EOF()
                  IF BRKAL<>MBRKAL
                     EXIT
                  ENDIF   
                  MIZNOSPRE=MIZNOSPRE+IZNOS
                  SKIP
               ENDDO   
            ENDIF
            ENDIF
         ENDIF
         SELECT KALG
         SKIP
      ENDDO      
   ENDIF
   SELECT KOMKIR
   REPLACE IZNOSPRE WITH MIZNOSPRE
   SKIP
ENDDO   
